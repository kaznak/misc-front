{
  "name": "misc-front",
  "private": true,
  "scripts": {
    "format": "prettier --write *.json README.md"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "engines": {
    "node": ">= 14.15.1"
  },
  "lint-staged": {
    "*.(json|md)": "yarn format"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "^4.3.8",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  }
}
